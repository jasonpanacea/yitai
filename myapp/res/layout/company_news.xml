<?xml version="1.0" encoding="utf-8"?>
<!--禁止edittext自动获取焦点-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
        >


    <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/news"

            >

        <TextView
                android:id="@+id/header_text"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="公司新闻"
                >

        </TextView>


    </RelativeLayout>

    <ImageView
            android:id="@+id/bg"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@id/header_layout"
            android:background="@drawable/news_pic"/>





    <ListView
            android:id="@+id/list"
            android:layout_below="@id/bg"
            android:cacheColorHint="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@drawable/shape_line"
            android:headerDividersEnabled="false"
            android:dividerHeight="4dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    </ListView>


    
    <Button
        android:id="@+id/link"
        android:text="访问伊泰官网，浏览更多实时新闻"
        android:singleLine="true"
        android:background="@color/transparent"
        android:textColor="#FED1C2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bg"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/news_link_icon"
/>

</RelativeLayout>