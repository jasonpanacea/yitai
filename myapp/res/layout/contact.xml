<?xml version="1.0" encoding="utf-8"?>
<!--禁止edittext自动获取焦点-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
        >


    <RelativeLayout 
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/contact"

        >

    <TextView
            android:id="@+id/header_text"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="联系方式"
            >

    </TextView>


</RelativeLayout>

    <ImageView
            android:id="@+id/bg"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@id/header_layout"
            android:layout_marginTop="-10dp"
            android:background="@drawable/contact_pic"/>

    <EditText
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/search_eidt"
            android:layout_alignTop="@+id/bg"
            android:id="@+id/search_edit"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:hint=" 搜索联系方式"
            android:layout_marginTop="60dp"/>

    <Button
            android:id="@+id/search_btn"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:background="@drawable/search_button_selector"
            android:layout_alignTop="@id/search_edit"
            android:layout_toRightOf="@id/search_edit"/>

    <ListView
            android:id="@+id/contact_list"
            android:layout_below="@id/bg"
            android:cacheColorHint="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@drawable/shape_line"
            android:headerDividersEnabled="false"
            android:dividerHeight="4dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    </ListView>

</RelativeLayout>